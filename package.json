{
  "name": "photo-mechanic-team-txt-generator",
  "version": "1.0.0",
  "description": "Generate formatted TXT files for Photo Mechanic code replacements",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run dev:web\"",
    "dev:web": "vite --mode web",
    "dev:desktop": "tauri dev",
    "server": "node server/index.cjs",
    "build": "tsc && vite build",
    "build:web": "tsc && vite build --mode web",
    "preview": "vite preview",
    "preview:web": "vite preview --mode web",
    "production": "node server/index.cjs",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.0",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "pdfjs-dist": "^5.4.530",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^5.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.5.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.16",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.4"
  }
}
