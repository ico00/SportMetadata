{
  "name": "photo-mechanic-team-txt-generator",
  "version": "1.0.0",
  "description": "Generate formatted TXT files for Photo Mechanic code replacements",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run dev:web\"",
    "dev:web": "vite --mode web",
    "dev:desktop": "tauri dev",
    "server": "node server/index.cjs",
    "build": "tsc && vite build",
    "build:web": "tsc && vite build --mode web",
    "preview": "vite preview",
    "preview:web": "vite preview --mode web",
    "production": "node server/index.cjs",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@tauri-apps/api": "^1.5.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "concurrently": "^9.2.1"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  }
}
